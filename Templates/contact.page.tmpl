{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>This is the About page from a Template</h1>
                <p>This came from the string map: {{index .StringMap "test"}}</p>

                <p>
                    {{if ne (index .StringMap "remote_ip") ""}}
                        Your remote IP is {{index .StringMap "remote_ip"}}
                    {{else}}
                        I don't know your IP address. Visit the <a href="/">home page</a> to set it
                    {{end}}
                </p>
            </div>
        </div>

    </div>
{{end}}